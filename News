<script>
var API_URL = "https://api-berita-indonesia.vercel.app/detik/terbaru";
var REFRESH_TIME = 300000; // 5 menit

function loadBerita(){
  fetch(API_URL)
    .then(function(res){ return res.json(); })
    .then(function(data){
      var html = "";
      data.data.posts.slice(0,5).forEach(function(item){
        html +=
          '<div class="news">' +
            '<a href="'+item.link+'" target="_blank" rel="noopener">' +
              '<b>'+item.title+'</b><span class="badge">BARU</span>' +
            '</a><br>' +
            '<small>'+item.pubDate+'</small>' +
          '</div>';
      });
      document.getElementById("berita").innerHTML = html;
      document.getElementById("info").innerText =
        "Update: " + new Date().toLocaleTimeString("id-ID");
    })
    .catch(function(){
      document.getElementById("berita").innerHTML =
        "Gagal memuat berita.";
